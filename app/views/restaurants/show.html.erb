<div class="d-flex justify-content-between align-items-center my-3">
  <h1><%= @restaurant.name %></h1>
  <%= link_to 'Add A Review', new_restaurant_review_path(@restaurant), class: "btn btn-primary"%>
</div>

<div class="card">
  <div class="card-header text-left">
    <%= @restaurant.category.capitalize %>
  </div>
  <div class="card-body text-center">
    <h5 class="card-title"><%= @restaurant.address %></h5>
    <p class="card-text"><%= @restaurant.phone_number %></p>
  </div>
  <div class="card">
    <div class="card-header">
      Reviews
    </div>
    <% @restaurant.reviews.each do |review| %>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <small><cite title="Source Title"><%= review.created_at.to_s(:short) %></cite></small>
        <p><small><%= review.content %></small></p>
        <small><%=  '🍗' * review.rating %></small>
      </blockquote>
    </div>
    <hr>
    <% end %>
  </div>
</div>

<%= link_to 'Back', restaurants_path, class: "btn btn-primary" %>
